<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.project.dao.TOrderMapper">
  <resultMap id="BaseResultMap" type="com.company.project.domain.model.TOrder">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="order_id" jdbcType="INTEGER" property="orderId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
  </resultMap>
  
  <resultMap id="orderDetailResultMap" type="com.company.project.domain.dto.OrderDetailDto" >
    <id column="order_id" jdbcType="INTEGER" property="orderId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="order_content" jdbcType="VARCHAR" property="orderContent" />
  </resultMap>
  
  <select id="findOrderDetail" parameterType="Integer" resultMap="orderDetailResultMap">
  	select t1.order_id,t1.create_time,t1.user_id,t2.order_content
  	from t_order t1 left join t_order_item t2 on t1.order_id = t2.order_id
  	<where>
  		t1.user_id = #{userId}
  	</where>
  </select>
</mapper>